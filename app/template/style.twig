{% set color1 = "#FB5F93" %}
{% set color2 = "#85FFE6" %}
{% set color3 = "black" %}
{% set color4 = "#56A5E3" %}
{% set color5 = "#BB56E3" %}
{% set c5t = "white" %}

body {
    margin-bottom: 4ex;
}

#pwcard td, #pwcard th {
    border: 1px solid {{ color1 }};
    font-size: 1.2em;
    padding: .25rem !important;
}

#pwcard td:nth-of-type({{ env('MATRIXSTROKE')|default(3) }}n+{{ env('MATRIXSTROKE')|default(3) + 1 }}), #pwcard th:nth-of-type({{ env('MATRIXSTROKE')|default(3) }}n+{{ env('MATRIXSTROKE')|default(3) + 1 }}), #pwcard td:nth-last-child(2), #pwcard th:nth-last-child(2), #pwcard td:first-of-type, #pwcard th:first-of-type {
    border-right: 4px solid {{ color1 }};
}

#pwcard td:last-of-type, #pwcard th:last-of-type {
    border-right: 1px solid {{ color1 }};
}

#pwcard tbody tr:nth-of-type({{ env('MATRIXSTROKE')|default(3) }}n) td, #pwcard th {
    border-bottom: 4px solid {{ color1 }};
}

#pwcard tbody tr:last-of-type td {
    border-bottom: 4px solid {{ color1 }};
}

#pwcard td, #pwcard th {
    text-align: center;
}

#pwcard th, #pwcard tfoot, #pwcard .mainpres {
    font-weight: bold;
    color: {{ color3 }};
    background: {{ color2 }};
}

#pwcard .plain {
    background: {{ color1 }};
}

#pwcard>tbody>tr:nth-of-type(even) {
    background: {{ color4 }};
}

summary {
    cursor: pointer;
}

summary:focus {
    outline: none;
}

.logo {
    width: 100%;
    height: 100px;
}

.jumbotron {
    background: {{ color5 }};
    color: {{ c5t }};
    font-family: Univers, Arial;
    padding: 10px;
}

h1 {
    font-size: 250%;
}

p {
    font-size: 90%;
}

img {
    max-width: 200px;
    max-height: 100px;
    float: right;
}

.btn {
    margin-top: 10px;
    background: {{ color5 }};
    border: {{ color5 }};
    float: right;
    color: {{ c5t }}
}

.btn:hover {
    background: {{ color5 }};
}

.printOnly {
    display: none; 
}

@media print {
    .printOnly {
        display: block;
    }
    * {
        font-family: Univers, Arial;
    }
    h1 {
        font-size: 250%;
        color: black !important;
    }
    p {
        display: none;
    }
    .btn {
        display: none;
    }
    details {
        display: none;
    }

    #pwcard td, #pwcard th {
     -webkit-print-color-adjust:exact;
    border: 1px solid {{ color1 }} !important;
    font-size: 1.2em !important;
    padding: .25rem !important;
    }

    #pwcard td:nth-of-type({{ env('MATRIXSTROKE')|default(3) }}n+{{ env('MATRIXSTROKE')|default(3) + 1 }}), #pwcard th:nth-of-type({{ env('MATRIXSTROKE')|default(3) }}n+{{ env('MATRIXSTROKE')|default(3) + 1 }}), #pwcard td:nth-last-child(2), #pwcard th:nth-last-child(2), #pwcard td:first-of-type, #pwcard th:first-of-type {
        border-right: 4px solid {{ color1 }} !important;
        -webkit-print-color-adjust:exact;
    }

    #pwcard td:last-of-type, #pwcard th:last-of-type {
        border-right: 1px solid {{ color1 }} !important;
         -webkit-print-color-adjust:exact;
    }

    #pwcard tbody tr:nth-of-type({{ env('MATRIXSTROKE')|default(3) }}n) td, #pwcard th {
        border-bottom: 4px solid {{ color1 }} !important;
         -webkit-print-color-adjust:exact;
    }

    #pwcard tbody tr:last-of-type td {
        border-bottom: 4px solid {{ color1 }} !important;
         -webkit-print-color-adjust:exact;
    }

    #pwcard td, #pwcard th {
        text-align: center !important;
         -webkit-print-color-adjust:exact;
    }

    #pwcard th, #pwcard tfoot, #pwcard .mainpres {
        font-weight: bold !important;
        color: {{ color3 }} !important;
        background: {{ color2 }} !important;
         -webkit-print-color-adjust:exact;
    }

    #pwcard .plain {
        -webkit-print-color-adjust:exact;
        background: {{ color1 }} !important;
    }

    #pwcard>tbody>tr:nth-of-type(even) {
        -webkit-print-color-adjust:exact;
        background: {{ color4 }} !important;
    }

    .github {
        display: none;
    }
}

.github {
    margin-top: 0.75em;
    margin-right: 2em;
}
